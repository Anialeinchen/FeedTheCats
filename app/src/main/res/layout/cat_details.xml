<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:backgroundTint="@color/colorPrimaryLight"
                app:srcCompat="@drawable/ic_arrow_back_claret_24dp" />

            <TextView
                android:id="@+id/library_detail_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="details"
                android:textAllCaps="true"
                android:textSize="22sp" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:background="@drawable/ic_floral_right_border_outline_variant"
            android:rotation="270" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@drawable/ic_floral_right_border_outline_variant" />

        <LinearLayout
            android:id="@+id/cat_details_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_cat_details"
                android:layout_width="@dimen/line_ev"
                android:layout_height="wrap_content"
                android:hint="name"
                android:padding="8dp"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/weight_cat_details"
                android:layout_width="@dimen/line_ev"
                android:layout_height="wrap_content"
                android:hint="weight"
                android:inputType="numberSigned"
                android:padding="8dp"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/food_weight_cat_details"
                android:layout_width="@dimen/line_ev"
                android:layout_height="wrap_content"
                android:hint="food amount"
                android:inputType="numberSigned"
                android:padding="8dp"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/food_name_cat_details"
                android:layout_width="@dimen/line_ev"
                android:layout_height="wrap_content"
                android:hint="food name (optional)"
                android:padding="8dp"
                android:textSize="26sp" />

            <Button
                android:id="@+id/confirm_cat_detials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="54dp"
                android:layout_marginTop="36dp"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:text="OK"
                android:textSize="26sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end"
            android:background="@drawable/ic_floral_right_border_outline_variant"
            android:rotation="180" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_floral_right_border_outline_variant"
            android:rotation="90" />

    </RelativeLayout>

</LinearLayout>